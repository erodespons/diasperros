<!--Using main-layout.ejs-->

<form action="/signup" method="POST" class="user-forms">
  <h2>Regístrate!</h2>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="firstName">Nombre</label>
      <input type="text" class="form-control" name="firstName" placeholder="Ej. Mariano">
    </div>
    <div class="form-group col-md-6">
      <label for="lastName">Apellidos</label>
      <input type="text" class="form-control" name="lastName" placeholder="Ej. Mofetti">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" name="username" placeholder="Ej. mariano@mofetti-holding.com">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Contraseña</label>
      <input type="password" class="form-control" name="password" placeholder="Ej. 123..">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Dirección</label>
    <input type="text" class="form-control" name="address" placeholder="Ej. Calle Gran Vía 2">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">Ciudad</label>
      <input type="text" class="form-control" name="city" placeholder="Ej. Madrid">
    </div>
    <div class="form-group col-md-2">
      <label for="zipCode">Código Postal</label>
      <input type="number" class="form-control" name="zipCode" placeholder="Ej. 28013">
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="checkbox" name="newsletter">Suscribirme a la newsletter
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Registrarme</button>
  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>
  <p class="account-message">
    ¿Ya tienes una cuenta?
    <a href="/login">Inicia sesión</a>
  </p>
</form>
