<!--Using main-layout.ejs-->

<form action="/login" method="POST" id="login-form" class="user-forms">
  <h2>Login</h2>
  <div class="form-group">
    <label for="username">Email</label>
    <input type="email" class="form-control" name="username" placeholder="Ej. mariano@mofetti-holding.com">
  </div>
  <div class="form-group">
    <label for="password">Contraseña</label>
    <input type="password" class="form-control" name="password" placeholder="Ej. 123..">
  </div>
  <button type="submit" class="btn btn-primary">Entrar</button>
  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>
  <p class="account-message">
    ¿Aún no tienes una cuenta?
    <a href="/signup">Regístrate aquí</a>
  </p>
</form>
